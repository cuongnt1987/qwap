<pretty-config xmlns="http://ocpsoft.org/schema/rewrite-config-prettyfaces" 
               xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
               xsi:schemaLocation="http://ocpsoft.org/schema/rewrite-config-prettyfaces
                      http://ocpsoft.org/xml/ns/prettyfaces/rewrite-config-prettyfaces.xsd">

    <url-mapping id="view-app">
        <pattern value="/app/#{slug}.html" />
        <view-id value="/app.xhtml" />
    </url-mapping>
    
    <url-mapping id="moi-nhat">
        <pattern value="/game-ung-dung-moi-nhat.html" />
        <view-id value="/app.xhtml?viewType=new"/>
    </url-mapping>
    
    <url-mapping id="tai-nhieu-nhat">
        <pattern value="/game-ung-dung-tai-nhieu-nhat.html" />
        <view-id value="/app.xhtml?viewType=down"/>
    </url-mapping>
    
    <url-mapping id="xem-nhieu-nhat">
        <pattern value="/game-ung-dung-xem-nhieu-nhat.html" />
        <view-id value="/app.xhtml?viewType=view"/>
    </url-mapping>
    
    <url-mapping id="like-nhieu-nhat">
        <pattern value="/game-ung-dung-yeu-thich-nhat.html" />
        <view-id value="/app.xhtml?viewType=like"/>
    </url-mapping>
    
    <url-mapping id="view-index">
        <pattern value="/index.html" />
        <view-id value="/index.xhtml" />
    </url-mapping>

</pretty-config>